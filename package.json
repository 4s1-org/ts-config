{
  "name": "@4s1/ts-config",
  "version": "1.4.0",
  "description": "TS Config",
  "keywords": [
    "tsconfig",
    "4s1"
  ],
  "bugs": {
    "url": "https://gitlab.com/4s1/ts-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/4s1/ts-config.git"
  },
  "license": "MIT",
  "author": "Steffen <steffen@4s1.de>",
  "type": "commonjs",
  "exports": "./dist/index.js",
  "main": "./dist/index.js",
  "files": [
    "tsconfig*.json"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "echo nothing to build",
    "lbt": "npm run lint && npm run build && npm run test",
    "lint": "echo nothing to lint",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "release": "git diff --exit-code --quiet && pnpm run lbt && standard-version",
    "release:major": "pnpm run release -- --release-as major",
    "release:minor": "pnpm run release -- --release-as minor",
    "release:patch": "pnpm run release -- --release-as patch",
    "test": "echo nothing to test"
  },
  "prettier": "@4s1/eslint-config",
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "husky": "7.0.4",
    "prettier": "2.5.1",
    "standard-version": "9.3.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
